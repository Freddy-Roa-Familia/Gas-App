services:

//Change to:
  messaging:
    image: rabbitmq:3.8.2-management
    hostname: messaging
    environment:
    //credentials for admin - management access
      - RABBITMQ_DEFAULT_USER=${RABBITMQ_DEFAULT_USER:-admin}
      - RABBITMQ_DEFAULT_PASS=${RABBITMQ_DEFAULT_PASS:-admin}
    ports:
      - "5672:5672"
      - "15672:15672"

  cluster1:
    image: rabbitmq:3.8.2-management
    hostname: cluster1
    depends_on:
    //is linked to
      - messaging
    environment:
      - CLUSTERED=true
      - CLUSTER_WITH=messaging
      - RAM_NODE=true

  cluster2:
    image: rabbitmq:3.8.2-management
    hostname: cluster2
    depends_on:
      - messaging
      - cluster1
    environment:
      - CLUSTERED=true
      - CLUSTER_WITH=messaging

  networks:
  //you can also make clustering network in terminal with
  //docker network create rabbitmq-cluster
    default:
      external:
        name: rabbitmq-cluster

//Remaining Questions
      //Q:Do I need volumes????
      //Q: Does image have to be under every node?
//Q: Do the ports belong under each node? A: No, they should already know.
//To check if clusters are "clustering" sign into Management UI
